{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{.Folder}}{{if .Root}} :: root{{end}} :: {{.Shell}}",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#808080",
          "template": "\u256d\u2500"
        },
        {
          "background": "#6087af",
          "foreground": "#eeeeee",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
          "type": "os"
        },
        {
          "background": "#ffb86c",
          "foreground": "#100d13",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " \udb85\udc0b ",
          "type": "root"
        },
        {
          "background": "#caa9fa",
          "foreground": "#100d13",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "style": "folder"
          },
          "style": "powerline",
          "template": " \uf07c {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "#fc78c5",
          "foreground": "#100d13",
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " ({{ .Venv }}) \ue73c {{ .Full }} "
        },
        {
          "background": "#5bf78d",
          "foreground": "#100d13",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "branch_icon": "\ue725 ",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        {
          "foreground": "#ff5555",
          "style": "plain",
          "template": " ",
          "type": "text"
        }
      ],
      "type": "prompt"
    },    
    {
      "alignment": "right",
      "segments": [
        {
          "type": "status",
          "style": "powerline",
          "foreground": "#5af38b",
          "background": "#252525",
          "foreground_templates": [
            "{{ if .Error }}#ff5555{{ end }}"
          ],
          "powerline_symbol": "\ue0b2",
          "invert_powerline" : true,
          "template": " {{ if eq .Code 0 }}\uf00c{{ else }}\uea87 {{.Code}}{{ end }} ",
          "properties": {
            "always_enabled": true
          }
        },
        {
          "type": "executiontime",
          "style": "powerline",
          "powerline_symbol": "\ue0b2",
          "invert_powerline" : true,
          "foreground": "#ebeced",
          "background": "#252525",
          "template": "\uf254 {{.FormattedMs}} ",
          "properties": {
            "threshold": 500,
            "style": "austin",
            "always_enabled": true
          }
        },
        {
          "type": "sysinfo",
          "powerline_symbol": "\ue0b2",
          "invert_powerline" : true,
          "foreground": "#ebeced",
          "background": "#6087af",
          "template": " \ue266 {{ round .PhysicalPercentUsed .Precision }}%",
          "properties": {
            "precision": 2
          },
          "style": "powerline"
        },
        {
          "type": "battery",
          "style": "powerline",
          "powerline_symbol": "\ue0b2",
          "invert_powerline" : true,
          "foreground": "#ebeced",
          "background": "#6087af",
          "background_templates": [
            "{{if eq \"Charging\" .State.String}}#6087af{{end}}",
            "{{if eq \"Discharging\" .State.String}}#6087af{{end}}",
            "{{if eq \"Full\" .State.String}}#6087af{{end}}"
          ],
          "template": " {{ if not .Error }}{{.Icon}} {{.Percentage}}{{ end }}ïŠ•",
          "properties": {
            "discharging_icon": "\udb80\udc83",
            "charging_icon": "\udb80\udc84",
            "charged_icon": "\udb84\ude11"
          }
        },
        {
          "type": "time",
          "style": "diamond",
          "trailing_diamond": "\ue0b4",
          "foreground": "#ebeced",
          "background": "#6087af",
          "properties": {
            "time_format": "\udb82\udd54 15:04"
          }
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#808080",
          "style": "plain",
          "template": "\u2570\u2500",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
    "transient_prompt": {
        "background": "transparent",
        "foreground": "#f1fa8c",
        "template": "\udb85\udfa9 "
    },
  "final_space": true,
  "version": 2
}
